config BOARD
    default "esp32c6-devkit" if BOARD_ESP32C6_DEVKIT

config BOARD_ESP32C6_DEVKIT
    bool
    default y
    select BOARD_COMMON_ESP32C6
    select CPU_MODEL_ESP32C6_MINI_1X

source "$(RIOTBOARD)/common/esp32c6/Kconfig"
